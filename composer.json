{
  "name": "yoanm/behat-utils-extension",
  "description":  "A set of utility for Behat3",
  "keywords": ["Behat3", "Utils", "Debug", "Logger"],
  "type": "library",
  "license": "MIT",
  "version": "0.2.0",
  "authors": [
    {
      "name": "yoanm",
      "email": "yoanm@users.noreply.github.com",
      "role": "Developer"
    }
  ],
  "suggest": {
    "yoanm/behat3-symfony-extension": "Symfony integration for behat v3.0"
  },
  "support": {
    "issues": "https://github.com/yoanm/BehatUtilsExtension/issues"
  },
  "autoload": {
    "psr-0": {
      "Yoanm\\BehatUtilsExtension": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Technical\\": "tests/Technical",
      "Functional\\": "tests/Functional",
      "FunctionalTest\\Yoanm\\BehatUtilsExtension\\Context\\": "features/bootstrap/"
    }
  },
  "require": {
    "php": ">=5.5",
    "behat/behat": "~3.0",
    "monolog/monolog": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "squizlabs/php_codesniffer": "2.*",
    "matthiasnoback/symfony-dependency-injection-test": "1.*"
  },
  "scripts": {
    "test": [
      "@t-test",
      "@f-test"
    ],
    "f-test": [
      "./vendor/bin/phpunit --colors=auto --testsuite functional",
      "./vendor/bin/behat --no-snippets --strict --colors --format progress"
    ],
    "t-test": [
      "./vendor/bin/phpunit --colors=auto --testsuite technical"
    ],
    "cs": [
      "./vendor/bin/phpcs"
    ],
    "coverage-clover": [
      "./vendor/bin/phpunit --coverage-clover coverage/clover.xml"
    ],
    "coverage": [
      "./vendor/bin/phpunit --coverage-html coverage"
    ]
  }
}
